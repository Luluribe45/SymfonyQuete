{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div>
        <h1>{{ category }}</h1>
        <h2>{{ articles|length }} articles order by id desc</h2>
        {% for article in articles %}
            <h3>{{ article.id ~ '. ' ~ article.title }}</h3>
            <p>{{ article.content }}</p>
        {% endfor %}
    </div>

{% endblock %}