{% extends "base.html.twig" %}

{% block title %}Liste articles de blog{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
{% endblock %}

{% block body %}

    <h1>Liste des articles par cat√©gories</h1>

    <div class="container">
        {% for category in categories %}
            <div class="row my-2">
                <div class="col bg-secondary text-white">
                    {{ category.name }}
                </div>
            </div>
            <div class="row my-2">
                {% for article in category.articles %} {# Utilisation du getArticles(); #}
                    <div class="col-12 bg-light mb-3">
                        <div class="card">
                            <div class="card-header">
                                {{ article.title }}
                            </div>
                            <div class="card-body">
                                {{ article.content }}
                            </div>
                            <div class="card-footer text-info">
                                <span class="text-dark">{{ article.category.name }} </span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}